{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "lib": ["es2015"],
  "include": ["**/*.ts", "types.d.ts"],
  "exclude": ["node_modules", "tests", "tooling"],
  "ts-node": {
    "files": true
  },
  "files": [
    "types.d.ts",
  ],
}